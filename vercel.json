{
  "rewrites": [
    { "source": "/itinerary", "destination": "/api/og/itinerary/index" },
    { "source": "/itinerary/:id", "destination": "/api/og/itinerary/:id" },

    { "source": "/specials", "destination": "/specials.html" },
    { "source": "/specials/:slug", "destination": "/specials.html" },

    { "source": "/listings/:slug", "destination": "/listings.html" },
    { "source": "/guides/:slug", "destination": "/guides.html" },

    { "source": "/dashboard", "destination": "/dashboard.html" },
    { "source": "/reset-password", "destination": "/reset-password.html" }
  ],
  "redirects": [
    {
      "source": "/listings.html",
      "destination": "/listings/:slug",
      "has": [{ "type": "query", "key": "slug" }],
      "permanent": true
    },
    {
      "source": "/guides.html",
      "destination": "/guides/:slug",
      "has": [{ "type": "query", "key": "slug" }],
      "permanent": true
    },
    {
      "source": "/specials.html",
      "destination": "/specials/:slug",
      "has": [{ "type": "query", "key": "slug" }],
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/.well-known/apple-app-site-association",
      "headers": [{ "key": "Content-Type", "value": "application/json" }]
    },
    {
      "source": "/.well-known/assetlinks.json",
      "headers": [{ "key": "Content-Type", "value": "application/json" }]
    }
  ]
}