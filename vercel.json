{
  "rewrites": [
    { "source": "/itinerary", "destination": "/itinerary.html" },
    { "source": "/itinerary/(.*)", "destination": "/itinerary.html" },

    { "source": "/specials", "destination": "/specials.html" },
    { "source": "/specials/:slug", "destination": "/specials.html?specials_slug=:slug" },

    { "source": "/listings/:slug", "destination": "/listings.html?slug=:slug" },
    { "source": "/guides/:slug", "destination": "/guides.html?slug=:slug" }
  ],
  "redirects": [
    {
      "source": "/listings.html",
      "destination": "/listings/:slug",
      "has": [{ "type": "query", "key": "slug" }],
      "permanent": true
    },
    {
      "source": "/guides.html",
      "destination": "/guides/: ",
      "has": [{ "type": "query", "key": "slug" }],
      "permanent": true
    },
    {
      "source": "/specials.html",
      "destination": "/specials/:slug",
      "has": [{ "type": "query", "key": "slug" }],
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/.well-known/apple-app-site-association",
      "headers": [{ "key": "Content-Type", "value": "application/json" }]
    },
    {
      "source": "/.well-known/assetlinks.json",
      "headers": [{ "key": "Content-Type", "value": "application/json" }]
    }
  ]
}